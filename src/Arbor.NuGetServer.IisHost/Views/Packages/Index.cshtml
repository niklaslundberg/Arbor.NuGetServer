@using Arbor.NuGetServer.Core.Extensions
@using Arbor.NuGetServer.IisHost.Controllers
@model Arbor.NuGetServer.IisHost.Models.PackagesViewModel

<h2>Packages</h2>

<h3>NuGet packages (@Model.TotalNuGetSize.AsSuitableByteUnit())</h3>

@if (Model.RelativeNuGetPaths.Any())
{
    <ul>
        @foreach (var item in Model.RelativeNuGetPaths)
        {
            <li>@item.RelativePath, <strong>@item.FileInfo.Length.AsSuitableByteUnit()</strong></li>
        }
    </ul>
}

<h3>Other files (@Model.TotalOtherFileSize.AsSuitableByteUnit())</h3>

@if (Model.RelativeOtherPaths.Any())
{
    <ul>
        @foreach (var item in Model.RelativeOtherPaths)
        {
            <li>@item.RelativePath <strong>@(item.FileInfo.Length.AsSuitableByteUnit())</strong></li>
        }
    </ul>
}
