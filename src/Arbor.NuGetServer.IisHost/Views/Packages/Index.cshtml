@using Arbor.NuGetServer.Api.Areas.NuGet
@using Arbor.NuGetServer.Core.Extensions
@model Arbor.NuGetServer.Api.Areas.NuGet.PackagesViewOutputModel

<h2>Packages</h2>

<h3>NuGet packages (@Model.TotalNuGetSize.AsSuitableByteUnit())</h3>

@if (Model.RelativeNuGetPaths.Count > 0)
{
    <h4>Top packages by size</h4>

    <ul>
        @foreach (PackageFileInfo item in Model.TopPackagesBySize)
        {
            <li>@item.RelativePath, <strong>@item.FileInfo.Length.AsSuitableByteUnit()</strong></li>
        }
    </ul>

    <h4>All packages</h4>

    <ul>
        @foreach (PackageFileInfo item in Model.RelativeNuGetPaths)
        {
            <li>@item.RelativePath, <strong>@item.FileInfo.Length.AsSuitableByteUnit()</strong></li>
        }
    </ul>
}

<h3>Other files (@Model.TotalOtherFileSize.AsSuitableByteUnit())</h3>

@if (Model.RelativeOtherPaths.Count > 0)
{
    <ul>
        @foreach (OtherFileInfo item in Model.RelativeOtherPaths)
        {
            <li>
                @item.RelativePath <strong>@(item.FileInfo.Length.AsSuitableByteUnit())</strong>
            </li>
        }
    </ul>
}
